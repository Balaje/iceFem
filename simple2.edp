//The Eigenvalue problem with Purely Neumann boundary condition.
verbosity=0.;
bool debug=true;
include "macros.idp"
string SolutionDir="1_EigenModes/";

//Set problem
nev=20;
setProblem;


setMeshIce(0,0,0);
setMeshCav(0,0,0);

plot(ThIce,ThCavity,wait=1);

savemesh(ThIce,SolutionDir+"2_ModesMatrix/iceMesh.msh");
Xh[int][VX,VY](nev);
real[int] ev(nev);
solveEigen;

writeEigen;

//Radiation potential bases.
Wh<complex>[int] phij(nev);
Wh pp;
for(int m=0; m<nev; m++)
  {
    func fh=0;

    //Applying a Robin--Boundary condition.
    //getLaplaceMat(VX[m],VY[m]);    
    //LHS=STIMA+(1e-2)*BMASSMA;
    
    //Uncomment the two lines for DBC
    getLaplaceMatDBC(VX[m],VY[m]);
    LHS=STIMA;
    
    set(LHS,solver=sparsesolver);
    phih[]=LHS^-1*RHS[];
    phij[m]=phih;
    
    plot(phij[m],wait=debug,value=1,fill=1,dim=3);
  }

